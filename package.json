{
  "name": "socialtdd",
  "version": "1.0.0",
  "description": "SocialTDD - Social network application",
  "scripts": {
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd backend/SocialTDD.Api && dotnet run",
    "start:frontend": "cd frontend && npm start",
    "install:all": "npm install && cd frontend && npm install",
    "build": "cd backend && dotnet build && cd ../frontend && npm run build"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
